<div class="container">
  <div class="row my-5">
    <div class="col-4 offset-1 d-inline-flex">
      <div class="bg-light px-3">
        <h4 class="m-0">配送先登録/一覧</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @delivery_address, url: delivery_addresses_path, class: "col-10" do |f| %>
      <div class="col-12">
        <table class="table table-borderless">
          <tr>
            <td class="py-1" style="width: 200px">郵便番号(ハイフンなし)</td>
            <td class="py-1"><%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code", class: "w-50" %></td>
            <td class="py-1"></td>
          </tr>
          <tr>
            <td class="py-1" style="width: 200px">住所</td>
            <td class="py-1"><%= f.text_field :address, autocomplete: "address", class: "w-100" %></td>
            <td class="py-1"></td>
          </tr>
          <tr>
            <td class="py-1" style="width: 200px">宛名</td>
            <td class="py-1"><%= f.text_field :name, autocomplete: "current-password", class: "w-50" %></td>
            <td class="py-1" style="width: 150px"><%= f.submit "新規登録", class: "btn btn-success w-100" %></td>
          </tr>
        </table>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <tr class="table-secondary">
          <th style="width: 100px">郵便番号</th>
          <th style="width: 300px">住所</th>
          <th style="width: 100px">宛名</th>
          <th></th>
        </tr>

        <tr>
          <td class="align-middle"><%= current_customer.zip_code %></td>
          <td class="align-middle"><%= current_customer.address %></td>
          <td class="align-middle">
            <%= current_customer.last_name %>
            <%= current_customer.first_name %>
          </td>
          <td class="align-middle">
            <%= link_to "編集する", edit_customers_path, class: "btn btn-success mx-1" %>
            <div class="btn btn-danger disabled mx-1">削除する</div>
          </td>
        </tr>

        <% if @delivery_addresses.present? %>
          <% @delivery_addresses.each do |delivery_address| %>
            <tr>
              <td class="align-middle"><%= delivery_address.zip_code %></td>
              <td class="align-middle"><%= delivery_address.address %></td>
              <td class="align-middle"><%= delivery_address.name %></td>
              <td class="align-middle">
                <%= link_to "編集する", edit_delivery_address_path(delivery_address), class: "btn btn-success mx-1" %>
                <%= link_to "削除する", delivery_address_path(delivery_address), class: "btn btn-danger mx-1" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>


</div>