<div class="container">
  <div class="row my-5">
    <div class="col-3 offset-2 d-inline-flex">
      <div class="bg-light px-3">
        <h4 class="m-0">新規会員登録</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: customer_registration_path, id: "new_customer", class: "new_customer" do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class='col-12 offset-1'>
        <table class='table table-borderless'>
          <tbody>

            <tr>
              <td class="py-1">名前</td>
              <td class="py-1">(姓)</td>
              <td class="py-1"><%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "w-100" %></td>
              <td class="py-1">(名)</td>
              <td class="py-1"><%= f.text_field :first_name, placeholder: "道子", class: "w-100" %></td>
            </tr>

            <tr>
              <td class="py-1">フリガナ</td>
              <td class="py-1">(セイ)</td>
              <td class="py-1"><%= f.text_field :last_name_kana, placeholder: "レイワ", class: "w-100" %></td>
              <td class="py-1">(メイ)</td>
              <td class="py-1"><%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "w-100" %></td>
            </tr>

            <tr>
              <td class="py-1"><%= f.label :メールアドレス %></td>
              <td class="py-1"></td>
              <td class="py-1"><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class: "w-100" %></td>
              <td class="py-1"></td>
              <td class="py-1"></td>
            </tr>

            <tr>
              <td class="py-1">郵便番号(ハイフンなし)</td>
              <td class="py-1"></td>
              <td class="py-1"><%= f.text_field :zip_code, placeholder: "0000000", class: "w-100" %></td>
              <td class="py-1"></td>
              <td class="py-1"></td>
            </tr>

            <tr>
              <td class="py-1">住所</td>
              <td class="py-1"></td>
              <td class="py-1" colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "w-100" %></td>
            </tr>

            <tr>
              <td class="py-1">電話番号(ハイフンなし)</td>
              <td class="py-1"></td>
              <td class="py-1"><%= f.text_field :phone_number, placeholder: "0000000000", class: "w-100" %></td>
              <td class="py-1"></td>
              <td class="py-1"></td>
            </tr>

            <tr>
              <td class="py-1">パスワード(6文字以上)</td>
              <td class="py-1"></td>
              <td class="py-1"><%= f.password_field :password, autocomplete: "new-password", class: "w-100" %></td>
              <td class="py-1"></td>
              <td class="py-1"></td>
            </tr>

            <tr>
              <td class="py-1">パスワード(確認用)</td>
              <td class="py-1"></td>
              <td class="py-1"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %></td>
              <td class="py-1"></td>
              <td class="py-1"></td>
            </tr>

            <tr>
              <td class="py-1"></td>
              <td class="py-1"></td>
              <td class="py-1">
                <%= f.submit "新規登録", class: "btn btn-success w-75" %>
              </td>
              <td class="py-1"></td>
              <td class="py-1"></td>
            </tr>

          </tbody>
        </table>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-3 offset-2 d-inline-flex mt-3">
      <div class="bg-light px-3">
        <h4 class="m-0">既に登録済みの方</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-4 offset-3 my-3">
      <%= link_to "こちら", "public/shared/links" %>
      からログインしてください。
    </div>
  </div>
</div>
