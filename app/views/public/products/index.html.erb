<div class="container">
  <div class="row">
  <h1>商品一覧</h1>
</div>
<div class="row">
  <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0 mx-auto">
<tbody>
<% @products.each do |product| %>
<tr>
<td>
</td>
<td><%= image_tag product.get_image, size: "300x200" %></td>
<td><%= link_to product.name, product_path(product.id) %></td>
<td>￥<%= product.price %></td>
</tr>
<% end %>
</tbody>
</div>
</div>
</div>
