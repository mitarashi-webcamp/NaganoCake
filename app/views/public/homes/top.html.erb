    </div>
  </div>
  <div class="row mx-5">
    <div class="col-10 offset-2">
      <% @products.first(4).each do |product| %>
        <table class="col-2 table table-borderless d-inline-flex m-4 p-0">
          <tr>
            <td><%= image_tag product.get_image, size: "200x150" %></td>
          </tr>
          <tr>
            <td><%= link_to product.name, product_path(product.id) %></td>
          </tr>
          <tr>
            <td>¥<%= product.price %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-10">
      <%= link_to "全ての商品を見る>", products_path %>
    </div>
  </div>
</div>