<div class="container">
  <div class="row my-5">
    <div class="col-2 offset-1 d-inline-flex">
      <div class="bg-light px-3">
        <h4 class="m-0">ログイン</h4>
      </div>
    </div>
  </div>

  <div class="row my-5">
    <iv class="col-5 offset-1 d-inline-flex">
      <div class="bg-light mx-4 px-3">
        <h5 class="m-0">会員の方はこちらからログイン</h5>
      </div>
    </iv>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: session_path do |f| %>
     <div class="col-12 offset-1">
       <table class="table table-borderless">
         <tr>
           <td>メールアドレス</td>
           <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
         </tr>
         <tr>
           <td>パスワード</td>
           <td><%= f.password_field :password, autocomplete: "current-password" %></td>
         </tr>
         <tr>
           <td></td>
           <td><%= f.submit "ログイン" %></td>
         </tr>
       </table>
     </div>
    <% end %>
  </div>
</div>