<h4>ショッピングカート</h4>
<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>

  <% total = 0 %>

<% if current_customer.carts.present? %>
    <% @carts.each do |cart| %>
     <tr>
       <td>
         <%= attachment_image_tag(cart.product, :image, size: "60x50", fallback: "no_image.jpg") %>
         <%= cart.product.name %> #商品名
       </td>
       <td><%= (cart.product.price*1.1).to_i %></td>
       <td>
         <%= form_with model: cart, url: cart_path(cart), local: true, method: :patch do |f| %>
           <%= f.number_field :quantity, min: 1, max:10, id: "quantity_cart"%>
           <%= f.submit "変更",class: "btn btn-success" %>
         <% end %>
       </td>
       <td>
         <% subtotal = ((cart.product.price*cart.quantity)*1.1).to_i %>
         <%= subtotal %> #小計を表示
       </td>
       <td>
         <%= link_to "商品をカートから削除する", cart_path(cart.id, cart), method: :delete,class: "btn btn-danger" %>
       </td>
     </tr>
       <% total += subtotal %>
     <% end %>
<% end %>
   <tr>
    <th>合計金額</th>
    <td><%= total %></td>
   </tr>