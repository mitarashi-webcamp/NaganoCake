<div class="container">
  <div class="row my-5">
    <div class="col-3 offset-2 d-inline-flex">
      <div class="bg-light px-3">
        <h4 class="m-0">マイページ</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <h5>登録情報</h5>
    <%= link_to "編集する", edit_customer_path %>
  </div>

  <div class="row">
    <div class="col-12">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="table-secondary">氏名</td>
            <td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
          </tr>
          <tr>
            <td class="table-secondary">カナ</td>
            <td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
          </tr>
          <tr>
            <td class="table-secondary">郵便番号</td>
            <td><%= current_customer.zip_code %></td>
          </tr>
          <tr>
            <td class="table-secondary">住所</td>
            <td><%= current_customer.address %></td>
          </tr>
          <tr>
            <td class="table-secondary">電話番号</td>
            <td><%= current_customer.phone_number %></td>
          </tr>
          <tr>
            <td class="table-secondary">メールアドレス</td>
            <td><%= current_customer.email %></td>
          </tr>
        </tbody>
      </table>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>配送先</td>
            <td><%= link_to "一覧を見る", delivery_addresses_path %></td>
          </tr>
          <tr>
            <td>注文履歴</td>
            <td><%= link_to "一覧を見る", orders_path %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>