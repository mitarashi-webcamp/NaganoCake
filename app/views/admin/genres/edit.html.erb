<div class="container">
  <div class="row">
    <h1>ジャンル編集</h1>
  </div>
  
  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id),method: :patch do |f| %>
    <div class="form-group">
      ジャンル名
    </div>
    
    <div class="form-group">
      <%= f.text_field :name %>
    </div>
    
    <div class="form-group">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>