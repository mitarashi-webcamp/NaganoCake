<div class="container">
  <h1>商品編集</h1>

  <%= render "errors", product: @product %>
  <div class="row">
    <div class="col">
      <%= form_with model: @product, url: admin_product_path(@product),method: :patch do |f| %>
      <div class="form-group">商品画像
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div class="form-group">商品名
        <%= f.text_field :name, placeholder: "商品名" %>
      </div>

      <div class="form-group">商品説明
        <%= f.text_area :note, placeholder: "ここに説明文を記述します" %>
      </div>

      <div class="form-group">ジャンル
        <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "選択してください" } %>
      </div>

      <div class="form-group">税抜価格
        <%= f.text_field :price, placeholder: "1000" %>
      </div>

      <div class="form-group">販売ステータス
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active,"販売中", value: true %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active,"販売停止中", value: false %>
      </div>

      <div class="form-group">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
