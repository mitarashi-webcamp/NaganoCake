<%= form_with model: product do |f| %>
<div class="form-group">商品画像
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">商品名
  <%= f.text_field :name %>
</div>

<div class="form-group">商品説明
  <%= f.text_area :note %>
</div>

<div class="form-group">ジャンル
  <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "選択してください" } %>
</div>

<div class="form-group">税抜価格
  <%= f.text_field :price %>
</div>

<div class="form-group">販売ステータス
  <%= form_with model: product do |form| %> 
    <%= form.radio_button :is_active, true %>
    <%= form.label :is_active,"販売中", value: true %>
    <%= form.radio_button :is_active, false %>
    <%= form.label :is_active,"販売停止中", value: false %>  <%#= 初期値設定できてる？後ほど確認　%>
  <% end %>
</div>

<div class="form-group">
  <%= f.submit "新規登録", class: "btn btn-success" %>
</div>
<% end %>