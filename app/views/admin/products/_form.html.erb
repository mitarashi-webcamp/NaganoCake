<%= form_with model: product, url: admin_products_path, method: :post do |f| %>
<div class="form-group">商品画像
  <%= f.file_field :image, accept: "image/*" %>
</div>

<div class="form-group">商品名
  <%= f.text_field :name %>
</div>

<div class="form-group">商品説明
  <%= f.text_area :note %>
</div>

<div class="form-group">ジャンル
  <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "選択してください" } %>
</div>

<div class="form-group">税抜価格
  <%= f.text_field :price %>
</div>

<div class="form-group">販売ステータス

    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active,"販売中", value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active,"販売停止中", value: false %>

</div>

<div class="form-group">
  <%= f.submit "新規登録", class: "btn btn-success" %>
</div>
<% end %>