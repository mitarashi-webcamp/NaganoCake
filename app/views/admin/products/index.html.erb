<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0 mx-auto">
   <br>
   <h3>商品一覧</h3>
    <%= link_to "商品を追加する＋", new_admin_product_path, class: "btn btn-primary" %>
     <table class='table table-hover table-inverse'>
      <thead>
       <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
       </tr>
      </thead>
      <tbody>
       <% @products.each do |product| %>
       <tr>
        <td><%= product.id %></td>
        <td><%= link_to product.name, admin_product_path(product) %></td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>

        <td>
         <% if product.is_active %>
          <p class="text-success font-weight-bold">販売中</p>
         <% else %>
          <p class="text-muted font-weight-bold">販売停止中</p>
          <% end %>
         </td>
       </tr>
       <% end %>
      </tbody>
     </table>
   </div>
  </div>
</div>
