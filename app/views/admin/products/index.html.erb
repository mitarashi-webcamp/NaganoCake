<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0 mx-auto">
   <h3>商品一覧</h3>
    <%= link_to "+", new_admin_product_path, class: "btn btn-primary" %>
     <table class='table table-hover table-inverse'>
      <thead>
       <tr>
        <th>商品id</th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
       </tr>
      </thead>
      <tbody>
       <% @products.each do |product| %>
       <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.genre.name %></td>
        <td><%= product.is_active %></td>
       </tr>
       <% end %>
      </tbody>
     </table>
   </div>
  </div>
</div>
