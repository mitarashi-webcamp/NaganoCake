<div class="container">
 <div class="row">
 <div class="col-lg-8">
  <br>
   <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
   <table class="table table-borderless">
    <tbody>
      <tr>
        <td>会員id</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
　　　　<td>フリガナ</td>
　　　　<td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.zip_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td><%= @customer.is_deleted %></td>
      </tr>
    </tbody>
    </table>
    <p class ="mr-2">
    <%= link_to "編集", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
    </p>
    <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>

  </div>
 </div>
</div>