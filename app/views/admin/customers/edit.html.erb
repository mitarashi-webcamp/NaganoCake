<div class="container">
 <div class="row">
 <div class="col-lg-8">
  <br>
<h3><%= @customer.last_name %> <%=@customer.first_name %>さんの会員情報編集</h3>

<table class="table table-borderless">
  <%= form_with model:@customer, url:admin_customer(customer) do |f| %>
    <tbody>
      <tr>
        <td>会員id</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name, class:'form-control' %></td>
        <td><%= f.text_field :first_name, class:'form-control' %></td>
      </tr>
      <tr>
　　　　<td>フリガナ</td>
　　　　<td><%= f.text_field :last_name_kana, class:'form-control' %></td>
　　　　<td><%= f.text_field :first_name_kana, class:'form-control' %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :zip_code, class:'form-control' %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, class:'form-control' %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :phone_number, class:'form-control' %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, class:'form-control' %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td><%= form_with(model: @customer, local: true) do |form| %>
             <%= form.radio_button :is_deleted, :male %>
             <%= form.label :is_deleted, "有効", {style: "display: inline-block;"} %>
             <%= form.radio_button :is_deleted, :female %>
             <%= form.label :is_deleted, "退会", {style: "display: inline-block;"} %>
             <% end %>
        </td>
      </tr>
    </tbody>
    </table>
    <div class="form-group">
      <%= f.submit "変更を保存", class:'btn btn-success' %>
    </div>
  </div>
 </div>
</div>
<% end %>

